generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Products{
  id String @id @db.VarChar(255)
  name String @db.VarChar(255)
  description String
  quantity Int
  createdAt DateTime @default(now())
}


model Users{
  id String @id @db.VarChar(255)
  username String
  email String @unique
  phone_number String @unique
  password String
}
